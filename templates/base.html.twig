<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">  
            <link rel="stylesheet" href="{{ asset('css/custom-atrinium.css') }}">
        {% endblock %}
    </head>
    <body>

    <nav class="navbar navbar-expand-lg navbar-dark atrinium-bg-color">
        <div class="container">
            <a class="navbar-brand" href="{{ path('homepage')}}">
            <img src="{{ asset('images/atrinium-logo.svg') }}" alt="Atrinium" width="170" height="39" loading="lazy"/>
            </a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav mr-auto">
                <li class="nav-item {% if (app.request.pathInfo == path('homepage')) %} active{% endif %}">
                    <a class="nav-link" href="{{ path('homepage')}}">Home <span class="sr-only">(current)</span></a>
                </li>
                <li class="nav-item {% if (app.request.pathInfo == path('company_index')) %} active{% endif %}">
                    <a class="nav-link" href="{{ path('company_index')}}">Companies</a>
                </li>
                <li class="nav-item {% if (app.request.pathInfo == path('sector_index')) %} active{% endif %}">
                    <a class="nav-link" href="{{ path('sector_index')}}">Sectors</a>
                </li>
                <li class="nav-item {% if (app.request.pathInfo == path('currency_request_new')) %} active{% endif %}">
                    <a class="nav-link" href="{{ path('currency_request_new')}}">Currency converter</a>
                </li>
                
                </ul>
            </div>
        </div>
    </nav>
        {% block body %}{% endblock %}

    <footer class="container-fluid">
        <div class="container d-flex align-items-center flex-column">
            <a class="navbar-brand" href="{{ path('homepage')}}">
                <img src="{{ asset('images/atrinium-logo.svg') }}" alt="Atrinium" width="85" height="20" loading="lazy"/>
            </a>
            <span>Â©2020</span>
        </div>
    </footer>
    {% for message in app.flashes('notice') %}
    <div class="toast" style="position: absolute; top: 0; right: 0; opacity: 1"role="alert" aria-live="assertive" aria-atomic="true">
        <div class="toast-header">
            <img src="{{ asset('images/favicon.png') }}" class="rounded mr-2" alt="Atrinium">
            <strong class="mr-auto">Atrinium</strong>
            <button type="button" onclick="$('.toast').toast('hide')" class="ml-2 mb-1 close" data-dismiss="toast" aria-label="Close">
            <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <div class="toast-body">
            {{ message }}
        </div>
    </div>
    {% endfor %}
        {% block javascripts %}
        <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ho+j7jyWK8fNQe+A12Hb8AhRq26LrZ/JpcUGGOn+Y7RsweNrtN/tE3MoK7ZeZDyx" crossorigin="anonymous"></script>
        {% endblock %}
    </body>
</html>
