{% extends 'base.html.twig' %}

{% block title %}Company index{% endblock %}
{% block body %}
    <div class="container atrinium-list-page">
        <h1>Company index</h1>

        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Telephone</th>
                    <th>Email</th>
                    <th>Sector</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for company in companies %}
                <tr>
                    <td>{{ company.id }}</td>
                    <td>{{ company.name }}</td>
                    <td>{{ company.telephone }}</td>
                    <td>{{ company.email }}</td>
                    <td>{{ company.sector }}</td>
                    <td>
                        <a href="{{ path('company_edit', {'id': company.id}) }}">Edit</a>
                        <a href="{{ path('company_delete_check', {'id': company.id}) }}">Delete</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5">No records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a class="atrinium-cta-button" href="{{ path('company_new') }}">Add new company</a>

    </div>
{% endblock %}
